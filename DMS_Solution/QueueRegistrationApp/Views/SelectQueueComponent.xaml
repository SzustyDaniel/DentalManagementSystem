<UserControl x:Class="QueueRegistrationApp.Views.SelectQueueComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.30*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,15" Padding="5" Text="{Binding Message}"
                   FontSize="30" FontFamily="Ariel"/>
        <Button Grid.Row="2" Grid.Column="0" FontSize="20" Padding="10,15" Content="{Binding FirstService}" Margin="10,15"/>
        <Button Grid.Row="2" Grid.Column="1" FontSize="20" Padding="10,15" Content="{Binding SecondService}" Margin="10,15"/>
        
        
    </Grid>
</UserControl>
